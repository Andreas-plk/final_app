<div id="branch-main-content" class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center">
      <h1 class="page-title mb-4"><%= page_title %></h1>
      <div class="d-flex justify-content-center">
        <%= render 'posts/branch/create_new_post', branch: branch %>
      </div>
    </div>
  </div>
  <!-- row -->
  <div class="row">
    <%= render 'posts/branch/categories', branch: branch %>
  </div>
  <div class="row">
    <div class="col-sm-12 mb-3 mb-sm-0 d-flex flex-wrap align-items-start" id="feed">
      <%= render @posts %>
      <%= render no_posts_partial_path @posts %>
    </div>
  </div>
  <!-- row -->
  <nav>
    <%= will_paginate @posts , renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </nav>
</div>
<!-- container -->