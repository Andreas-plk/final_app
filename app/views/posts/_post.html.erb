<div class="col-sm-3 p-2 single-post-card" 
    data-post-id="<%= post.id %>" 
    data-controller="modal"
     data-action="click->modal#open"
  data-posted-by="Posted by <%= post.user.name %>" 
  data-title="<%= post.title %>" 
  data-content="<%= post.content %>" 
  data-interested-url="<%= post_path(post.id) %> "
  style="height:150px;">
  <div class="card border-dark"style="height:150px;">
    <div class="card-body d-flex flex-column">
      <h4 class="post-text">
        <%= truncate(post.title, :length => 60) %>
      </h4>
    </div>
  </div>
</div>
