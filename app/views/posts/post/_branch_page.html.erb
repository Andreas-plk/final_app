<div class="card col-md-3 mb-3 m-1 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to truncate(post.title, length: 60), post_path(post.id), class: "text-decoration-none text-dark" %>
    </h5>
    <h6 class="text-muted">Posted by <%= post.user.name %></h6>
    <p class="card-text"><%= truncate(post.content, length: 120) %></p>
    <%= link_to "I'm interested", post_path(post.id), class: "btn btn-primary btn-sm" %>
  </div>
</div>
